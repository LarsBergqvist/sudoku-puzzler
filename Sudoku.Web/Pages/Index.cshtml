@page
@model Sudoku.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Sudoku Puzzle";
}

<div class="text-center">
    <h1 class="display-4">Sudoku Puzzle Generator</h1>
    <form method="post" asp-page-handler="Index">
        @Html.AntiForgeryToken()
        <div class="btn-group mb-4" role="group" aria-label="Difficulty selection">
            <button type="submit" name="difficulty" value="Basic" class="btn btn-primary">Basic</button>
            <button type="submit" name="difficulty" value="Hard" class="btn btn-warning">Hard</button>
            <button type="submit" name="difficulty" value="VeryHard" class="btn btn-danger">Very Hard</button>
        </div>
    </form>
    
    <div id="sudokuGrid" class="sudoku-grid">
        @for (int i = 0; i < 9; i++)
        {
            <div class="sudoku-row">
                @for (int j = 0; j < 9; j++)
                {
                    <div class="sudoku-cell" data-row="@i" data-col="@j">
                        @(Model.Grid != null && Model.Grid[j*9 + i] != 0 ? Model.Grid[j*9 + i].ToString() : "")
                    </div>
                }
            </div>
        }
    </div>
</div>
